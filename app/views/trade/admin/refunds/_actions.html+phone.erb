<%= button_to({ action: 'destroy' }, method: :delete, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'trash' %>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'pencil' %>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show' }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'eye' %>
  <span><%= t('.show.title') %></span>
<% end %>
<% if model.state != 'completed' %>
  <%= button_to({ action: 'confirm', id: model.id }, method: :patch, class: 'cell has-column-centered') do %>
    <%= svg_tag 'thumbs-up', class: 'icon is-small text-success' %>
    <span><%= t('.confirm.title') %></span>
  <% end %>
  <%= button_to({ action: 'deny', id: model.id }, method: :patch, class: 'cell has-column-centered') do %>
    <%= svg_tag 'thumbs-down', class: 'icon is-small text-danger' %>
    <span><%= t('.deny.title') %></span>
  <% end %>
<% end %>

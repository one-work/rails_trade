<td><%= model.title %></td>
<td>
  <p><%= model.years %></p>
  <p><%= model.months %></p>
  <p><%= model.days %></p>
</td>
<td><%= model.price.to_money.format.html_safe %></td>
<td><%= model.note %></td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :default, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>

<p>
  <span class="family-monospace"><%= link_to model.uuid, { action: 'show', id: model.id }, text: true %></span>
  <span class="tag"><%= model.state_i18n %></span>
</p>
<p>
<% if model.serial_number.present? %>
  <div class="tags has-addons mb-1">
    <span class="tag is-link is-light">取餐码</span>
    <span class="tag"><%= model.serial_number %></span>
  </div>
<% end %>
</p>
<p>
  <span class="text-danger"><%= model.amount.to_money.format.html_safe %></span>
  <span class="tag"><%= model.payment_status_i18n %></span>
  <% if model.payment_strategy %>
  <span class="tag is-danger"><%= model.payment_strategy.name %></span>
  <% end %>
</p>
<p>
  <time data-controller="time" class="size-7"><%= model.created_at.to_fs(:iso8601) %></time>
</p>
<p>
<% if model&.member %>
  <span><%= model.member.name %></span>
  <span class="text-grey">（<%= model.member_organ.name %>）</span>
<% end %>
</p>

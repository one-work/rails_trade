<td>
  <span><%= model.amount.to_fs(:rounded, precision: @wallet_template.digit) %></span>
  <span><%= model.wallet_template.unit %></span>
</td>
<td><%= model.price.to_money.format.html_safe %></td>
<td>
<% if model.card_template %>
  <div class="is-several">
    <%= image_tag model.card_template.logo, class: 'image is-24x24' if model.card_template.logo.attached? %>
    <span><%= model.card_template.name %></span>
  </div>
<% end %>
</td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :open, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>

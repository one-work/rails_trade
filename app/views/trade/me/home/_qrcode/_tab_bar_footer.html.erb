<div class="buttons background-white px-3 as-bottom">
<% if request.variant.include?(:mini_program) %>
  <div
    data-controller="mini-program"
    data-mini-program-nav-value="true"
    data-mini-program-url-value="/pages/download_image/index"
    data-mini-program-data-value="<%= { url: url_for(action: 'qrcode_file', auth_token: Current.session&.id, only_path: false) }.to_json %>"
    data-action="click->mini-program#link"
    class="button is-primary"
  >
    <%= svg_tag 'download' %>
    <span class="ml-1"><%= t('.qrcode_file.title') %></span>
  </div>
<% else %>
  <%= link_to({ action: 'qrcode_file' }, class: 'button is-primary') do %>
    <%= svg_tag 'download' %>
    <span class="ml-1"><%= t('.qrcode_file.title') %></span>
  <% end %>
<% end %>
</div>